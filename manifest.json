{
	"manifest_version":1,
	"type":"WebApp",

	"meta":{
		"name":"VibeRant",
		"description":"A tool to sync in game valorant events with everything that can vibrate",
		"dock_button_title": "VibeRant",
		
		"author":"Brodino",
		"version":"0.0.1",
		
		"launcher_icon": "",
		"tray_icon": "",
		"window_icon": "",
		"icon":"./src/icons/IconMouseOver.png",
		"icon_gray":"./src/icons/IconMouseNormal.png",

		"minimum-overwolf-version":"0.199.0.15"
	},

	"permissions": ["Microphone", "GameInfo"],

	"data": {
		"game_targeting": { "type": "dedicated", "game_ids": [21640] },

		"start_window":"MainWindow",
		"windows":{
			"MainWindow": {
				"file":"./src/index.html",
				"transparent": false,
				"resizable": true,
				"use_os_windowing": true,

				"size": { "width":1280,	"height":720 },
				"min_size": { "width":720, "height":405 }
			}
		}
	},

	"force_browser": "user",
	"enable_osr_acceleration": true,
	"game_events": [21640],
	"launch_events": [ { "event": "GameLaunch", "event_data": { "game_ids": [21640] }, "start_minimized": true } ],

	"process_name": "VibeRant"
}